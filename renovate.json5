{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':dependencyDashboard',
  ],
  schedule: [
    'before 6am on Saturday',
  ],
  timezone: 'Europe/Brussels',
  packageRules: [
    {
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: true,
      automergeType: 'pr',
      platformAutomerge: true,
    },
    {
      matchUpdateTypes: [
        'major',
      ],
      automerge: false,
      labels: [
        'major-update',
      ],
    },
    {
      groupName: 'linuxserver media stack',
      matchPackageNames: [
        '/linuxserver/(prowlarr|radarr|sonarr|qbittorrent|plex|overseerr)/',
      ],
    },
    {
      matchPackageNames: [
        'kube-prometheus-stack',
        'loki',
        'promtail',
        'grafana',
      ],
      groupName: 'observability stack',
    },
    {
      matchDatasources: [
        'docker',
      ],
      pinDigests: true,
    },
  ],
  'helm-values': {
    managerFilePatterns: [
      '/kubernetes/.+/values\\.yaml$/',
    ],
  },
  terraform: {
    managerFilePatterns: [
      '/terraform/.+\\.tf$/',
    ],
  },
  commitMessagePrefix: 'chore(deps):',
  commitMessageAction: 'update',
  prHourlyLimit: 5,
  prConcurrentLimit: 10,
  labels: [
    'dependencies',
    'renovate',
  ],
}
